<!DOCTYPE html>
<html>
  <head>
    <title>KanbanBoard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script>
      <% if current_user %>
        window.currentUser = <%= current_user.to_json(only: [:id, :username]).html_safe %>
      <% end %>
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
